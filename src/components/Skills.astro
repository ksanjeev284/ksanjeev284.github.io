---
const skills = [
  { name: 'Languages', items: ['JavaScript', 'TypeScript', 'Python', 'Java'] },
  { name: 'Frontend', items: ['React', 'Vue', 'Angular', 'HTML/CSS'] },
  { name: 'Backend', items: ['Node.js', 'Express', 'Django', 'Spring'] },
  { name: 'Tools', items: ['Git', 'Docker', 'AWS', 'Linux'] }
];
---

<section class="skills">
  <h2>Skills</h2>
  <div class="skills-grid">
    {skills.map(category => (
      <div class="skill-category">
        <h3>{category.name}</h3>
        <ul>
          {category.items.map(item => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>

<style>
  .skills {
    padding: 4rem 0;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    margin: 2rem 0;
    border-radius: 1rem;
  }

  h2 {
    text-align: center;
    color: var(--accent);
    margin-bottom: 2rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 0 2rem;
  }

  .skill-category {
    text-align: center;
  }

  h3 {
    color: var(--accent-dark);
    margin-bottom: 1rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin: 0.5rem 0;
    color: #4a5568;
  }
</style>