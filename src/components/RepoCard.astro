---
import { format } from 'date-fns';

const { repo } = Astro.props;
---

<div class="repo-card">
  <h3>
    <a href={repo.html_url} target="_blank" rel="noopener noreferrer">
      {repo.name}
    </a>
  </h3>
  <p>{repo.description}</p>
  <div class="meta">
    {repo.language && <span class="language">{repo.language}</span>}
    <span class="stars">‚≠ê {repo.stargazers_count}</span>
    <span class="updated">Updated: {format(new Date(repo.updated_at), 'MMM d, yyyy')}</span>
  </div>
</div>

<style>
  .repo-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 8px;
    padding: 1.5rem;
    transition: transform 0.2s;
  }

  .repo-card:hover {
    transform: translateY(-2px);
  }

  h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  a {
    color: var(--accent);
    text-decoration: none;
  }

  p {
    color: #666;
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  .meta {
    display: flex;
    gap: 1rem;
    font-size: 0.8rem;
    color: #666;
    margin-top: 1rem;
  }

  .language {
    color: var(--accent);
  }
</style>