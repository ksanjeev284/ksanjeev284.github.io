---
const { profile } = Astro.props;
---

<div class="profile">
  <img src={profile.avatar_url} alt={profile.name} class="avatar" />
  <h1>{profile.name}</h1>
  <p class="bio">{profile.bio}</p>
  <div class="stats">
    <div>
      <strong>{profile.public_repos}</strong>
      <span>Repositories</span>
    </div>
    <div>
      <strong>{profile.followers}</strong>
      <span>Followers</span>
    </div>
    <div>
      <strong>{profile.following}</strong>
      <span>Following</span>
    </div>
  </div>
</div>

<style>
  .profile {
    text-align: center;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .avatar {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .bio {
    color: #666;
    margin: 1rem 0;
  }

  .stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 1rem;
  }

  .stats div {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stats strong {
    font-size: 1.5rem;
    color: var(--accent);
  }

  .stats span {
    font-size: 0.9rem;
    color: #666;
  }
</style>